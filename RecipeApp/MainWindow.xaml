<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RecipeApp" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Welcome to RecipeApp!" FontSize="20" Margin="10" HorizontalAlignment="Center"/>
            <Button Content="Create New Recipe" Click="CreateNewRecipe_Click" Margin="10"/>
            <Button Content="View All Recipes" Click="ViewAllRecipes_Click" Margin="10"/>
            <Button Content="Filter Recipes" Click="FilterRecipes_Click" Margin="10"/>
            <ListView Name="RecipeListView" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
